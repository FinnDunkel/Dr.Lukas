<Page x:Class="WpfAppToolBar.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppToolBar.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <StackPanel Background="#FFF5F5F5">
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Content="Page2">
        </Label>

        <Label  x:Name="GewichtBauteil" Content=""/>
        <ComboBox SelectionChanged="GewichtBauteil1_SelectionChanged"  x:Name="GewichtBauteil1" Margin="0,33,30,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Kg}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ComboBox>



    </StackPanel>
</Page>
